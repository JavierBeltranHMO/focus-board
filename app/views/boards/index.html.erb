<h1>Your Boards</h1>
<%= link_to "New Board", new_board_path, class:"btn btn-primary mb-3" %>
<ul class="list-group">
  <% @boards.each do |board| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= link_to board.name, board_path(board) %>
    </li>
  </ul>