<%# app/views/boards/index.html.erb %>
<% if user_signed_in? %>
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h3 class="h3">Your Boards</h3>
      <%= link_to "New Board", new_board_path, class:"btn btn-primary mb-3" %>
    </div>
    <ul class="list-group mb-4">
      <% @owned_boards.each do |board| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= link_to board_path(board), class:"text-decoration-none text-dark w-100 d-flex justify-content-between" do %>
            <span><%= board.name %></span>
            <% if board.board_memberships.any? %>
              <i class="bi bi-people text-muted" title="Shared with others"></i>
            <% end %>
          <% end %>
        </li>
      <% end %>
    </ul>
    <h5 class="h5 mb-3">Shared with you</h5>
    <ul class="list-group">
      <% @shared_boards.each do |board| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= link_to board_path(board), class:"text-decoration-none text-dark w-100 d-flex justify-content-between" do %>
            <span><%= board.name %></span>
            <span class="badge bg-secondary ms-2">Shared</span>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
<% else %>
  <div class="text-center mt-5">
    <h1>Welcome to Focus Board</h1>
    <p class="lead">  Organize your life, one task at a time.
    </p>
    <%= link_to "Login", new_user_session_path, class:"btn btm-primary me-2" %>
    <%= link_to "register", new_user_registration_path, class:"btn btn-outline-primary" %>
  </div>
<% end %>