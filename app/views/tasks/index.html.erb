<p style="color: green"><%= notice %></p>
<% content_for :title, "Tasks" %>
<h1>Tasks</h1>
<div id="tasks">
  <% @tasks.each do |task| %>
    <%= render partial: "tasks/task", locals: { task: task } %>
    <p>
      <%= link_to "Show this task", task %>
    </p>
  <% end %>
</div>
<%= link_to "New task", new_task_path %>
