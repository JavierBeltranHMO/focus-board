<%= form_with(model: [@board, list]) do |form| %>
  <% if @list.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@list.errors.count, "error") %> prohibited this list from being saved:</h2>
      <ul>
        <% @list.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>
  <div>
    <h5>New Tasks</h5>
    <%= form.fields_for :tasks do |task_fields| %>
      <div class="mb-2">
        <%= task_fields.label :name, "Task Title" %>
        <%= task_fields.text_field :name, class:"form-control" %>
      </div>
    <% end %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
