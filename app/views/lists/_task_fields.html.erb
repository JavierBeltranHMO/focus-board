<div class="nested-task mb-2" data-new-record="<%= f.object.new_record?%>">
  <div class="d-flex gap-2 align-items-center">
    <%= f.text_field :name, class:"form-control", placeholder: "Task name" %>
    <%# Delete Button %>
    <%= f.hidden_field :_destroy %>
    <button class="btn btn-danger btn-sm" data-action="click->tasks#removeTask">&times;</button>
  </div>
</div>